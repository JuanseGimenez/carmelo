<% content_for :head do %>
  <%= stylesheet_link_tag 'dashboards' %>
  <%= stylesheet_link_tag 'trips' %>
  <%= stylesheet_link_tag 'segments' %>
<% end %>
<% content_for :title, "Estadia Segmento" %>
<%= render partial: "dashboards/header/navbar" %>
<div class="container" id="trips-pages">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= render partial: "trips/show/column-left" %>
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
        <div class="well" id="form-segment">
          <h2>Segmento estadia para el evento "<%= @trip.name %>"</h2>
            <div class="info-segment">
              <h3 id="segment-name"><span>Segmento:</span> @<%= @segment.name %></h3>
              <h3><span>Direccion del alojamiento:</span> <%= @segment.direction %></h3>
              <h3><span>Fecha de partida:</span> <%= I18n.localize @segment.start_date , :format => :long %></h3>
              <h3><span>Fecha de llegada:</span> <%= I18n.localize @segment.end_date , :format => :long %></p>
              <h3><span>Description:</span> <%= @segment.description %></h3>
            </div>
            <%= link_to "Volver al evento", trip_path(@trip) %>
        </div>
      </div>
    </div>
  </div>