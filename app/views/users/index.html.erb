<% content_for :head do %>
  <%= stylesheet_link_tag 'dashboards' %>
  <%= stylesheet_link_tag 'users' %>
  <%= javascript_include_tag "users" %>
<% end %>
<% content_for :title, "Lista de amigos" %>
<%= render partial: "dashboards/header/navbar" %>
<div class="container" style="padding-top: 70px;" id="friends-list">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="col-lg-4">
        <%= render partial: "dashboards/columns/column-left" %>
      </div>
      <div class="col-lg-8">
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading c-list">
                <span class="title">Mis Amigos</span>
                <ul class="pull-right c-controls">
                  <li><a href="#" class="hide-search" data-command="toggle-search" data-toggle="tooltip" data-placement="top" title="Toggle Search"><i class="glyphicon glyphicon-search"></i></a></li>
                </ul>
              </div>

              <div class="row" style="display: none;">
                <div class="col-xs-12">
                  <div class="input-group c-search">
                    <input type="text" class="form-control" id="contact-list-search">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                    </span>
                  </div>
                </div>
              </div>

              <ul class="list-group" id="contact-list">
                <% @friends.each do |friend| %>
                  <li class="list-group-item">
                    <div class="col-xs-12 col-sm-3">
                      <image alt="#{friend.name} profile image" src="<%= friend.facebook_image_url%>?type=normal" class="img-responsive img-circle"></image>
                    </div>
                    <div class="col-xs-12 col-sm-7">
                      <span class="name"><%= friend.name %></span><br/>
                      <span class="glyphicon glyphicon-map-marker text-muted c-info" data-toggle="tooltip" title="<%= friend.location %>"></span>
                      <span class="visible-xs"> <span class="text-muted"><%= friend.location %></span><br/></span>
                      <span class="glyphicon glyphicon-earphone text-muted c-info" data-toggle="tooltip" title="<%= friend.phone_number %>"></span>
                      <span class="visible-xs"> <span class="text-muted"><%= friend.phone_number %></span><br/></span>
                      <span class="fa fa-comments text-muted c-info" data-toggle="tooltip" title="<%= friend.email %>"></span>
                      <span class="visible-xs"> <span class="text-muted"><%= friend.email %></span><br/></span>
                    </div>
                    <div class="col-sm-2">
                      <%= link_to "ver perfil", user_path(friend), class: "btn btn-primary btn-space" %>
                      <button class="btn btn-danger">eliminar</button>
                    </div>
                    <div class="clearfix"></div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>