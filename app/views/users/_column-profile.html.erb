<div class="container" id="panel-info">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading"><i class="fa fa-bar-chart" aria-hidden="true"></i> Estadisticas</div>
      <div class="panel-body" id="carmelo-stats">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <h3>998</h3>
          <p class="text-muted">Kilometros recorridos</p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <h3><%= @user.trips.count %></h3>
          <p class="text-muted">Eventos asistidos</p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <h3><%= @user.friends.count %></h3>
          <p class="text-muted">Amigos que hice</p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <h3>213</h3>
          <p class="text-muted">Ciudades en las que dormi</p>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading"><i class="fa fa-user" aria-hidden="true"></i> Ultimos Amigos</div>
      <div class="panel-body">
          <% if @user.friends.empty? %>
            <h3>Aun no cuenta con amigos!</h3>
          <% else %>
            <% @user.friends.each do |friend| %>
              <img src="<%= friend.facebook_image_url %>?type=large" width="80">
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12"">
    <div class="panel panel-default">
      <div class="panel-heading">#CarmeloClub</div>
      <div class="panel-body">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img src="https://media-cdn.tripadvisor.com/media/photo-s/01/5d/f3/e8/carmelo.jpg"  class="img-responsive">
            </div>

            <div class="item">
              <img src="https://restorando-res.cloudinary.com/image/upload/s--codYTihx--/c_fit,f_auto,h_500,w_700/v1470694096/restaurant_photos/w/10526/97174/restaurante_carmelo-mx_polanco_13503090_1016463811783554_6316480792480985642_o.jpg"  class="img-responsive">
            </div>

            <div class="item">
              <img src="http://xpenology.org/wp-content/themes/qaengine/img/default-thumbnail.jpg"  class="img-responsive">
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
         </div>
      </div>
    </div>
  </div>
</div>